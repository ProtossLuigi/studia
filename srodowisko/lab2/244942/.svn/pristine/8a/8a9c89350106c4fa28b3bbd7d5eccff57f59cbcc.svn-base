    turtle.right(45);
    turtle.forward(30);
    turtle.left(90);
    turtle.color("#FF0000");
    turtle.forward(30);
    turtle.left(90);
    turtle.forward(30);
    turtle.left(90);
    turtle.forward(30);
    turtle.left(90);
    turtle.forward(30);
    turtle.color("#FFFFFF");
    turtle.forward(60);
    turtle.left(72);
    turtle.color("#00FF00");
    turtle.forward(30);
    turtle.left(72);
    turtle.forward(30);
    turtle.left(72);
    turtle.forward(30);
    turtle.left(72);
    turtle.forward(30);
    turtle.left(72);
    turtle.forward(30);
    turtle.color("#FFFFFF");
    turtle.forward(60);
    turtle.color("#0000FF");
    turtle.left(60);
    turtle.forward(30);
    turtle.left(60);
    turtle.forward(30);
    turtle.left(60);
    turtle.forward(30);
    turtle.left(60);
    turtle.forward(30);
    turtle.left(60);
    turtle.forward(30);
    turtle.left(60);
